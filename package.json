{
  "name": "event-feedback-hub",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:up": "pnpm --filter server run db:up",
    "prisma:setup": "pnpm --filter server run generate && pnpm --filter server run migrate:dev && pnpm --filter server run seed",
    "setup:dev": "pnpm install && pnpm run db:up && pnpm run prisma:setup"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
