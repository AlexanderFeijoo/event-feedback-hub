{
  "name": "event-feedback-hub",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "env:ensure": "node -e \"const fs=require('fs');if(!fs.existsSync('server/.env')){if(fs.existsSync('server/.env.example')){fs.copyFileSync('server/.env.example','server/.env');console.log('Created server/.env from .env.example');}else{console.error('Missing server/.env (or .env.example).');process.exit(1);}}\"",
    "db:up": "docker compose up -d || docker-compose up -d",
    "prisma:setup": "pnpm -F server prisma generate && pnpm -F server migrate:dev && pnpm -F server seed",
    "setup:dev": "pnpm run env:ensure && pnpm install && pnpm run db:up && pnpm run prisma:setup",
    "dev:all": "pnpm run setup:dev && turbo dev"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
